@page "/home-alumno"
@layout MainLayoutAlumno
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation

<PageTitle>Portal Alumno</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="jumbotron bg-primary text-white p-5 rounded mb-4">
                <div class="container-fluid py-5">
                    <h1 class="display-4">
                        <i class="fas fa-user-graduate me-3"></i>
                        Bienvenido @nombreUsuario
                    </h1>
                    <p class="lead">Portal Alumno - Sistema Académico</p>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-user-graduate fa-3x text-primary mb-3"></i>
                            <h5 class="card-title">Inscribirse a Cursos</h5>
                            <p class="card-text">Inscribite a los cursos disponibles para tu plan.</p>
                            <a href="/inscribirse" class="btn btn-primary">Inscribirse</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-file-alt fa-3x text-info mb-3"></i>
                            <h5 class="card-title">Ver Mis Notas</h5>
                            <p class="card-text">Consultar tus notas y condición en los cursos</p>
                            <a href="/ver-notas" class="btn btn-info">Ver Notas</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string? nombreUsuario;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var tipoPersona = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "tipoPersona");
            nombreUsuario = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "nombreUsuario");

            if (tipoPersona != "Alumno")
            {
                Navigation.NavigateTo("/login");
            }
        }
        catch
        {
            Navigation.NavigateTo("/login");
        }
    }
}