@page "/especialidades"
@using DTOs
@using API.Especialidades
@using BlazorWebAssembly.Components
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation

<PageTitle>Especialidades</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-graduation-cap me-2"></i>
                        Especialidades
                    </h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @errorMessage
                            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @successMessage
                            <button type="button" class="btn-close" @onclick="() => successMessage = string.Empty"></button>
                        </div>
                    }

                    @if (loading)
                    {
                        <div class="d-flex justify-content-center align-items-center" style="min-height: 400px;">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                            <table class="table table-striped table-hover table-bordered">
                                <thead class="table-dark sticky-top">
                                    <tr>
                                        <th style="width: 150px;">ID</th>
                                        <th>Descripción</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (especialidades != null && especialidades.Any())
                                    {
                                        @foreach (var especialidad in especialidades)
                                        {
                                            <tr @onclick="() => SelectEspecialidad(especialidad)"
                                                class="@(selectedEspecialidad?.IdEspecialidad == especialidad.IdEspecialidad ? "table-active" : "")"
                                                style="cursor: pointer;">
                                                <td>@especialidad.IdEspecialidad</td>
                                                <td>@especialidad.Descripcion</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="2" class="text-center text-muted py-4">
                                                <i class="fas fa-inbox fa-2x mb-2"></i>
                                                <p class="mb-0">No hay especialidades registradas</p>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

        
                        <div class="d-flex justify-content-start gap-2 mt-3 border-top pt-3">
                            <button class="btn btn-outline-primary" @onclick="RefreshEspecialidades">
                                <i class="fas fa-sync-alt me-2"></i>
                                Refrescar
                            </button>
                            <button class="btn btn-outline-danger"
                                    disabled="@(selectedEspecialidad == null)"
                                    @onclick="EliminarEspecialidad">
                                <i class="fas fa-trash-alt me-2"></i>
                                Eliminar
                            </button>
                            <button class="btn btn-outline-warning"
                                    disabled="@(selectedEspecialidad == null)"
                                    @onclick="ModificarEspecialidad">
                                <i class="fas fa-edit me-2"></i>
                                Modificar
                            </button>
                            <button class="btn btn-outline-success" @onclick="AgregarEspecialidad">
                                <i class="fas fa-plus me-2"></i>
                                Agregar
                            </button>
                        </div>

                        @if (selectedEspecialidad != null)
                        {
                            <div class="alert alert-info mt-3">
                                <strong>Especialidad seleccionada:</strong>
                                @selectedEspecialidad.Descripcion (ID: @selectedEspecialidad.IdEspecialidad)
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (showDetalle)
{
    <EspecialidadDetalle Especialidad="@especialidadDetalle"
                         IsEditMode="@isEditMode"
                         OnSave="@HandleSave"
                         OnCancel="@HandleCancel" />
}

@if (showDeleteConfirm)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Confirmar eliminación
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CancelDelete"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-0">
                        ¿Está seguro que desea eliminar la especialidad
                        <strong>@selectedEspecialidad?.Descripcion</strong>
                        (ID: @selectedEspecialidad?.IdEspecialidad)?
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelDelete" disabled="@isDeleting">
                        Cancelar
                    </button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Eliminar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<EspecialidadDTO>? especialidades;
    private EspecialidadDTO? selectedEspecialidad;
    private EspecialidadDTO especialidadDetalle = new EspecialidadDTO();
    private bool loading = true;
    private bool showDetalle = false;
    private bool isEditMode = false;
    private bool showDeleteConfirm = false;
    private bool isDeleting = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadEspecialidades();
    }

    private async Task LoadEspecialidades()
    {
        try
        {
            loading = true;
            errorMessage = string.Empty;
            especialidades = (await EspecialidadApiClient.GetAllAsync())?.ToList();
            selectedEspecialidad = null;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar especialidades: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private void SelectEspecialidad(EspecialidadDTO especialidad)
    {
        selectedEspecialidad = selectedEspecialidad?.IdEspecialidad == especialidad.IdEspecialidad ? null : especialidad;
    }

    private async Task RefreshEspecialidades()
    {
        await LoadEspecialidades();
        successMessage = "Lista actualizada correctamente";
    }

    private void AgregarEspecialidad()
    {
        especialidadDetalle = new EspecialidadDTO();
        isEditMode = false;
        showDetalle = true;
    }

    private async void ModificarEspecialidad()
    {
        if (selectedEspecialidad == null) return;
        try
        {
            var esp = await EspecialidadApiClient.GetAsync(selectedEspecialidad.IdEspecialidad);
            if (esp != null)
            {
                especialidadDetalle = esp;
                isEditMode = true;
                showDetalle = true;
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar especialidad: {ex.Message}";
        }
    }

    private void EliminarEspecialidad()
    {
        if (selectedEspecialidad == null) return;
        showDeleteConfirm = true;
    }

    private async Task ConfirmDelete()
    {
        try
        {
            isDeleting = true;
            await EspecialidadApiClient.DeleteAsync(selectedEspecialidad!.IdEspecialidad);
            successMessage = $"Especialidad '{selectedEspecialidad.Descripcion}' eliminada correctamente";
            showDeleteConfirm = false;
            selectedEspecialidad = null;
            await LoadEspecialidades();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al eliminar especialidad: {ex.Message}";
        }
        finally
        {
            isDeleting = false;
        }
    }

    private void CancelDelete()
    {
        showDeleteConfirm = false;
    }

    private async Task HandleSave()
    {
        showDetalle = false;
        successMessage = isEditMode ? "Especialidad modificada correctamente" : "Especialidad agregada correctamente";
        await LoadEspecialidades();
    }

    private void HandleCancel()
    {
        showDetalle = false;
    }
}
